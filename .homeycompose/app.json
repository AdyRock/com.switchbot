{
    "id": "com.switchbot",
    "version": "0.2.0",
    "compatibility": ">=5.0.0",
    "sdk": 3,
    "brandColor": "#FF7D4B",
    "name":
    {
        "en": "SwitchBot"
    },
    "description":
    {
        "en": "Give SwitchBot the power of Homey"
    },
    "tags":
    {
        "en": [
            "Curtains"
        ]
    },
    "category": [
        "appliances"
    ],
    "permissions": [
        "homey:wireless:ble"
    ],
    "contributing":
    {
        "donate":
        {
            "paypal":
            {
                "username": "adyrock"
            }
        }
    },
    "bugs":
    {
        "url": "https://github.com/AdyRock/com.switchbot/issues"
    },
    "source": "https://github.com/AdyRock/com.switchbot",
    "homeyCommunityTopicId": 42296,
    "images":
    {
        "large": "/assets/images/large.jpg",
        "small": "/assets/images/small.jpg"
    },
    "author":
    {
        "name": "Adrian Rockall",
        "email": "ady@rockall.plus.com"
    },
    "api":
    {
        "getLog":
        {
            "method": "get",
            "path": "/getLog/"
        },
        "getDetect":
        {
            "method": "get",
            "path": "/getDetect/"
        },
        "clearLog":
        {
            "method": "post",
            "path": "/clearLog/"
        },
        "newData":
        {
            "method": "post",
            "path": "/newData/",
            "public": true
        }
    },
    "discovery":
    {
        "switchbot_ble_hub":
        {
            "type": "mdns-sd",
            "mdns-sd":
            {
                "name": "switchbotble",
                "protocol": "tcp"
            },
            "id": "{{txt.id}}"
        }
    }
}