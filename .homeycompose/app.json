{
  "id": "com.switchbot",
  "version": "0.1.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "SwitchBot"
  },
  "description": {
    "en": "Adds support for SwitchBot BLE devices"
  },
  "category": [
    "appliances"
  ],
  "permissions": [
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Adrian Rockall",
    "email": "ady@rockall.plus.com"
  },
  "api": {
    "getLog": {
      "method": "get",
      "path": "/getLog/"
    },
    "getDetect": {
      "method": "get",
      "path": "/getDetect/"
    },
    "clearLog": {
      "method": "post",
      "path": "/clearLog/"
    }
  }
}