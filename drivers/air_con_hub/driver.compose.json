{
    "id": "air_con_hub",
    "name": {
        "en": "Air Conditioner (HUB Remote)"
    },
    "class": "remote",
    "capabilities": [
        "power_on",
        "power_off",
        "target_temperature",
        "aircon_mode",
        "aircon_fan_speed",
        "button.send_log"
    ],
    "capabilitiesOptions": {
        "button.send_log": {
            "maintenanceAction": true,
            "title": {
                "en": "Send Diagnostics Log"
            },
            "desc": {
                "en": "Send a diagnostics log to the developer"
            }
        }
    },
    "$extends": [
        "settingsCompose",
        "hubDriver"
    ]
}