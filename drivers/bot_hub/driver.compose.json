{
    "id": "bot_hub",
    "name": {
        "en": "Bot (HUB)"
    },
    "class": "button",
    "capabilities": [
        "onoff",
        "button.send_log"
    ],
    "capabilitiesOptions": {
        "button.send_log": {
            "maintenanceAction": true,
            "title": {
                "en": "Send Diagnostics Log"
            },
            "desc": {
                "en": "Send a diagnostics log to the developer"
            }
        }
    },
    "energy": {
        "batteries": [
            "CR2"
        ]
    },
    "$extends": [
        "settingsCompose",
        "hubDriver"
    ],
    "settings": [
        {
            "id": "push_button",
            "type": "checkbox",
            "label": {
                "en": "Push Button"
            },
            "value": false,
            "hint": {
                "en": "When ticked Bot produces a short press and then returns."
            }
        }
    ]
}