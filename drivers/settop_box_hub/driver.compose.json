{
    "id": "settop_box_hub",
    "name":
    {
        "en": "Set Top Box (HUB Remote)"
    },
    "class": "remote",
    "capabilities": [
        "power_on",
        "power_off",
        "volume_up",
        "volume_down",
        "channel_up",
        "channel_down",
        "volume_mute",
        "button.send_log"
    ],
    "capabilitiesOptions": {
        "button.send_log": {
            "maintenanceAction": true,
            "title": {
                "en": "Send Diagnostics Log"
            },
            "desc": {
                "en": "Send a diagnostics log to the developer"
            }
        }
    },
    "$extends": [
        "settingsCompose",
        "hubDriver"
    ]
}