{
    "id": "presence_hub",
    "name": {
        "en": "Motion Sensor (HUB)"
    },
    "class": "sensor",
    "capabilities": [
        "alarm_motion",
        "bright",
        "button.send_log"
    ],
    "capabilitiesOptions": {
        "button.send_log": {
            "maintenanceAction": true,
            "title": {
                "en": "Send Diagnostics Log"
            },
            "desc": {
                "en": "Send a diagnostics log to the developer"
            }
        }
    },
    "$extends": [
        "settingsCompose",
        "hubDriver"
    ]
}