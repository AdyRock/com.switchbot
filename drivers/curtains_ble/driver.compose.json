    "images": {
        "large": "/drivers/curtains_ble/assets/images/large.jpg",
        "small": "/drivers/curtains_ble/assets/images/small.jpg"
    },
    "settings": [
        {
            "id": "invertPosition",
            "type": "checkbox",
            "label": {
                "en": "Invert Open / Close Position",
                "no": "Inverter Åpen / Lukket posisjon"
            },
            "value": false,
            "hint": {
                "en": "Reverse the action of the position control.",
                "no": "Vend retningen for posisjonsvelgeren."
            }
        },
        {
            "id": "motionMode",
            "type": "radio",
            "label": {
                "en": "Motion Mode",
                "no": "Bevegelsesmodus"
            },
            "value": "0xff",
            "values": [
                {
                    "id": "0",
                    "label": {
                        "en": "Performance",
                        "no": "Ytelse"
                    }
                },
                {
                    "id": "1",
                    "label": {
                        "en": "Silent",
                        "no": "Stille"
                    }
                },
                {
                    "id": "0xff",
                    "label": {
                        "en": "Last Used",
                        "no": "Sist brukte"
                    }
                }
            ],
            "hint": {
                "en": "Select the silent or performance mode of the motor.",
                "no": "Velg stille eller ytelsesmodus for motoren."
            }
        },
		{
			"id": "classType",
			"type": "dropdown",
			"label": {
				"en": "Device Class",
				"de": "Geräteklasse",
				"nl": "Product indeling",
				"it": "Classe Dispositivo"
			},
			"value": "curtain",
			"hint": {
				"en": "The default is curtain. If you want to use this device as a blind, select blind.",
