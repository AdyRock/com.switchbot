			},
			"values": [
				{
					"id": "curtain",
					"label": {
						"en": "Curtain",
						"de": "Vorhang",
						"nl": "Gordijn",
						"it": "Tenda"
					}
				},
				{
					"id": "blind",
					"label": {
						"en": "Blind",
						"de": "Jalousie",
						"nl": "Blind",
						"it": "Tapparella"
					}
				}
			]
		}
    ]
