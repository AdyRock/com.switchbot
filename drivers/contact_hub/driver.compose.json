{
    "id": "contact_hub",
    "name": {
        "en": "Contact Sensor (HUB)"
    },
    "class": "sensor",
    "capabilities": [
        "alarm_motion",
        "bright",
        "alarm_contact",
        "alarm_contact.left_open",
        "button.send_log"
    ],
    "capabilitiesOptions": {
        "alarm_contact.left_open": {
            "title": "Left Open",
            "insightsTitleTrue": {
                "en": "Contact Left Open"
            },
            "insightsTitleFalse": {
                "en": "Contact Closed"
            }
        },
        "button.send_log": {
            "maintenanceAction": true,
            "title": {
                "en": "Send Diagnostics Log"
            },
            "desc": {
                "en": "Send a diagnostics log to the developer"
            }
        }
    },
    "energy": {
        "batteries": [
            "AAA",
            "AAA"
        ]
    },
    "$extends": [
        "settingsCompose",
        "hubDriver"
    ]
}