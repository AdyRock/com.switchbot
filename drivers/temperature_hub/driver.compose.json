{
    "id": "temperature_hub",
    "name":
    {
        "en": "Temperature & Humidity (HUB)"
    },
    "class": "sensor",
    "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "button.send_log"
    ],
    "capabilitiesOptions": {
        "button.send_log": {
            "maintenanceAction": true,
            "title": {
                "en": "Send Diagnostics Log"
            },
            "desc": {
                "en": "Send a diagnostics log to the developer"
            }
        }
    },
    "$extends": [
        "settingsCompose",
        "hubDriver"
    ]
}