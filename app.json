{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.switchbot",
  "version": "0.1.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "SwitchBot"
  },
  "description": {
    "en": "Adds support for SwitchBot BLE devices"
  },
  "category": [
    "appliances"
  ],
  "permissions": [
    "homey:wireless:ble"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Adrian Rockall",
    "email": "ady@rockall.plus.com"
  },
  "api": {
    "getLog": {
      "method": "get",
      "path": "/getLog/"
    },
    "getDetect": {
      "method": "get",
      "path": "/getDetect/"
    },
    "clearLog": {
      "method": "post",
      "path": "/clearLog/"
    }
  },
  "drivers": [
    {
      "id": "curtains_ble",
      "name": {
        "en": "Curtains (BLE)"
      },
      "class": "curtain",
      "capabilities": [
        "measure_battery",
        "windowcoverings_set",
        "rssi"
      ],
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "energy": {
        "batteries": [
          "INTERNAL"
        ]
      },
      "images": {
        "large": "/drivers/curtains_ble/assets/images/large.png",
        "small": "/drivers/curtains_ble/assets/images/small.png"
      }
    },
    {
      "id": "curtains_hub",
      "name": {
        "en": "Curtains (HUB)"
      },
      "class": "curtain",
      "capabilities": [
        "windowcoverings_set"
      ],
      "pair": [
        {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/curtains_hub/assets/images/large.png",
        "small": "/drivers/curtains_hub/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "rssi": {
      "type": "number",
      "title": {
        "en": "RSSI"
      },
      "getable": true,
      "setable": false
    }
  }
}